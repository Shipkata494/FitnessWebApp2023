@model AddFoodViewModel
@{
    ViewBag.Title = "Add Food";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Protein" class="form-label">Protein</label>
                <input asp-for="@Model.Protein" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Protein" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Fat" class="form-label">Fat</label>
                <textarea asp-for="@Model.Fat" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="Fat" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Carbs" class="form-label">Carbs</label>
                <input asp-for="@Model.Carbs" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Carbs" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}